#!/usr/bin/env bash
# bin/compile BUILD_DIR CACHE_DIR ENV_DIR

BUILD_DIR=$1
CACHE_DIR=$2

WKHTMLTOPDF_URL="https://github.com/wkhtmltopdf/wkhtmltopdf/archive/0.12.5.tar.gz"
GZ_FILENAME=$CACHE_DIR/$(basename $WKHTMLTOPDF_URL)
WKHTMLTOPDF_PATH=$CACHE_DIR/wkhtmltox
DESTINATION=$BUILD_DIR/bin  # will be `/app/bin` inside dyno


# Download and extract wkhtmltopdf
if [ ! -d "$WKHTMLTOPDF_PATH" ]; then
	echo '-----> Downloading wkhtmltopdf'
	mkdir -p $(dirname $GZ_FILENAME)
	wget --quiet --continue --output-document="$GZ_FILENAME" "$WKHTMLTOPDF_URL"

	echo '-----> Extracting wkhtmltopdf'
	tar --gz --extract --file "$GZ_FILENAME" --directory "$CACHE_DIR"
	rm "$GZ_FILENAME"
fi

# Move files to /app/bin
if [ ! -f "$DESTINATION/wkhtmltopdf" ]; then
	echo '-----> Moving wkhtmltopdf binaries to /app/bin'

	if [ ! -d "$DESTINATION" ]; then
		mkdir -p "$DESTINATION"
	fi

	cp $WKHTMLTOPDF_PATH/bin/* $DESTINATION
fi
